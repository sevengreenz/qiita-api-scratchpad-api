{
  "globals": {
    "ts-jest": {
      "tsConfig": "test/tsconfig.json"
    }
  },
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}"
  ],
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "roots": [
    "test"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|jsx|ts|tsx)$",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "verbose": false
}
